<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:background="@drawable/pop_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pop_title"
        style="@style/pop_title_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提示信息" />

    <TextView
        android:id="@+id/tv_pop_message"
        style="@style/pop_message_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="内容" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pop_cancel"
            style="@style/pop_click_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/pop_cancel_selector" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/tv_pop_ok"
            style="@style/pop_click_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@color/pop_ok_selector" />
    </LinearLayout>
</LinearLayout>