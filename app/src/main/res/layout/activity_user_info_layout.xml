<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/base_toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_user_face"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_selector_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_user_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="头像" />

                <ImageView
                    android:id="@+id/img_user_face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <include layout="@layout/base_divider_horizontal_margin_layout" />

            <LinearLayout
                android:id="@+id/linear_user_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_selector_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_user_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="昵称" />

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/text_user_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="马子" />

            </LinearLayout>

            <include layout="@layout/base_divider_horizontal_margin_layout" />

            <LinearLayout
                android:id="@+id/linear_user_age"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_selector_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_user_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="年龄" />

                <TextView
                    android:id="@+id/tv_user_age"
                    style="@style/text_user_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25" />

            </LinearLayout>
            <include layout="@layout/base_divider_horizontal_margin_layout" />

            <LinearLayout
                android:id="@+id/linear_user_sex"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_selector_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_user_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="性别" />

                <TextView
                    android:id="@+id/tv_user_sex"
                    style="@style/text_user_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男" />

            </LinearLayout>
            <include layout="@layout/base_divider_horizontal_margin_layout" />

            <LinearLayout
                android:id="@+id/linear_user_district"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_selector_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_user_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="地区" />

                <TextView
                    android:id="@+id/tv_user_district"
                    style="@style/text_user_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浙江省绍兴" />

            </LinearLayout>
            <include layout="@layout/base_divider_horizontal_margin_layout" />

            <LinearLayout
                android:id="@+id/linear_user_weixin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_selector_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_user_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微信" />

                <TextView
                    android:id="@+id/tv_user_wenxin"
                    style="@style/text_user_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678901" />

            </LinearLayout>
            <include layout="@layout/base_divider_horizontal_margin_layout" />

            <LinearLayout
                android:id="@+id/linear_user_qq"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_selector_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_user_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QQ" />

                <TextView
                    android:id="@+id/tv_user_qq"
                    style="@style/text_user_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234567890" />

            </LinearLayout>
            <include layout="@layout/base_divider_horizontal_margin_layout" />

            <LinearLayout
                android:id="@+id/linear_user_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_selector_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_user_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="电话" />

                <TextView
                    android:id="@+id/tv_user_phone"
                    style="@style/text_user_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="135100861111" />

            </LinearLayout>
            <include layout="@layout/base_divider_horizontal_margin_layout" />

            <LinearLayout
                android:id="@+id/linear_user_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_selector_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_user_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="邮箱" />

                <TextView
                    android:id="@+id/tv_user_email"
                    style="@style/text_user_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mail@163.com" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>