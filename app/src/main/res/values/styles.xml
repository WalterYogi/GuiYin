<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/windowBackground</item>
        <!--menu的颜色设置-->
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextAppearance">@style/TextAppearance</item>
        <!--&lt;!&ndash;弹出菜单背景色为标题栏的背景色&ndash;&gt;-->
        <!--<item name="android:popupBackground">?attr/colorPrimary</item>-->
        <!--&lt;!&ndash;弹出菜单与标题栏的垂直间距&ndash;&gt;-->
        <!--<item name="android:dropDownVerticalOffset">0dip</item>-->

        <!--<item name="actionOverflowMenuStyle">@style/LYJMenuStyle</item>-->
    </style>

    <style name="LYJMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--<item name="android:overlapAnchor">false</item>-->
    </style>
    <style name="TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <!--弹出框样式开始-->
    <style name="loadDlgTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    <style name="pop_title_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#444</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="pop_message_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#777</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="pop_click_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--弹出框样式结束-->
    <!--加载样式-->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/loading</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="img_main_bottom_style">
        <item name="android:width">30dp</item>
        <item name="android:height">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="text_main_bottom_style">
        <item name="android:textColor">@color/app_main_bottom_normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="text_user_style">
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="text_fragment4_hint_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/tv_circle_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_user_info_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="text_setting_style">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:height">45dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/btn_selector_bg</item>
    </style>
</resources>
